<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="@string/tuijie"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <RelativeLayout
                android:id="@+id/fragment1"
                android:visibility="gone"
                android:layout_marginRight="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/office1"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="@string/office"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/office1"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/office1"
                    android:layout_width="80dp"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_alignBaseline="@id/office1"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/office1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="@string/person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fragment2"
                android:visibility="gone"
                android:layout_marginRight="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/office2"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="@string/office"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_alignBaseline="@id/office2"
                    android:textSize="20sp"
                    android:id="@+id/person2"
                    android:layout_toRightOf="@id/office2"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="@string/person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/person2"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/office2"
                    android:layout_width="80dp"
                    android:layout_height="1dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fragment3"
                android:visibility="gone"
                android:layout_marginRight="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:id="@+id/office3"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="@string/huihua"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/office3"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/office3"
                    android:layout_width="45dp"
                    android:layout_height="3dp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_alignBaseline="@id/office3"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/office3"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="@string/friend"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment4"
                android:visibility="gone"
                android:layout_marginRight="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:id="@+id/office4"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="@string/huihua"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/friend4"
                    android:gravity="center_horizontal"
                    android:layout_alignBaseline="@id/office4"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/office4"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="@string/friend"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@id/friend4"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/office4"
                    android:layout_width="45dp"
                    android:layout_height="3dp" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            />


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"
                ></View>

            <LinearLayout
                android:layout_below="@id/line"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:id="@+id/bottom_iv0"
                    android:layout_gravity="center"
                    android:src="@drawable/bottom1_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/bottom_iv1"
                    android:layout_gravity="center"
                    android:src="@drawable/bottom2_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/bottom_iv4"
                    android:layout_gravity="center"
                    android:src="@drawable/push_bt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/bottom_iv2"
                    android:layout_gravity="center"
                    android:src="@drawable/bottom3_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp" />

                <ImageView
                    android:id="@+id/bottom_iv3"
                    android:layout_gravity="center"
                    android:src="@drawable/bottom4_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

