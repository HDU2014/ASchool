<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="@color/colorThreme"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/other_userid"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="用户昵称"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
               >

                <com.hdu.tx.aschool.ui.widget.image.CircleImageView
                    android:id="@+id/other_head_user"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/ic_user" />

                <ImageView
                    android:tint="@color/red"
                    android:id="@+id/other_head_sex"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ridus_text_bg"
                    android:src="@drawable/sex_man" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ridus_text_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_foucs_num"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/foucs"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/grey"
                android:textColor="@color/grey_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/other_fans_num"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/fans"
                android:textColor="@color/white"
                android:textSize="12sp" />
            />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_chat"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/ridus_text_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/chat"
                android:textColor="@color/white"
                android:textSize="12sp"


                />

            <TextView
                android:id="@+id/other_foucs"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ridus_text_bg"
                android:gravity="center"
                android:text="@string/btfoucs"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="12sp" />
            />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
