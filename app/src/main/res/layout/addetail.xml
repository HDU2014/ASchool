<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lunboll"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/title"
            android:text="足球赛,约?"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:tint="@color/colorAccent"
            android:id="@+id/look_iv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title"
            android:src="@drawable/look_iv"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <TextView
            android:gravity="center_vertical"
            android:id="@+id/look_tv"
            android:text="78"
            android:layout_marginTop="5dp"
          android:layout_toRightOf="@id/look_iv"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />


        <ImageView
            android:tint="@color/colorAccent"
            android:id="@+id/collect_iv"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/look_tv"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:layout_below="@+id/title"
            android:src="@drawable/collected"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/collect_tv"
            android:text="67"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/collect_iv"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@id/look_tv"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/little_black" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="6dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/adetail_time"


                />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="left"-->
                <!--android:padding="@dimen/addetail_item"-->
                <!--android:text="@string/time"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:textSize="15sp"/>-->


            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:text="2015-8-20 18:00"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="6dp">

            <!--<TextView-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:gravity="left"-->
                <!--android:padding="@dimen/addetail_item"-->
                <!--android:text="@string/address"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:textSize="15sp"/>-->

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/adetail_place"
                />
            <TextView
                android:id="@+id/address_tv"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:text="@string/activity_address_test"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nickname_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/adetail_host"
                />

            <TextView
                android:id="@+id/hostname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="杭州电子科技大学学生会"
                android:textSize="15sp"/>
            <com.hdu.tx.aschool.ui.widget.image.CircleImageView
                android:id="@+id/host_head_pic"
                android:src="@drawable/ic_user"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_marginRight="5dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bottom4_select"/>

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:gravity="left"-->
                <!--android:padding="@dimen/addetail_item"-->
                <!--android:text="@string/person_number"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:textSize="15sp"/>-->



                <TextView
                    android:id="@+id/person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:text="20/100"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/group_chat"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="@string/qunliao"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:background="@drawable/qunliao_bg"
                    />

                <ImageView
                    style="@style/Right_arrow_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />
        </LinearLayout>

        <HorizontalScrollView
            android:background="@color/white"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hdu.tx.aschool.ui.View.HeadImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/headimages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.hdu.tx.aschool.ui.View.HeadImageView>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>








    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">


            <TextView
                android:id="@+id/describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。"
                android:textSize="15sp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="更多详情"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"></LinearLayout>


</LinearLayout>