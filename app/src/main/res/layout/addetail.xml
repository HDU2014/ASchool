<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lunboll"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/title"
            android:text="足球赛,约?"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/look_tv"
            android:textColor="@color/colorAccent"
            android:text="浏览了2001次"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/collect_tv"
            android:text="收藏了2001次"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/look_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@id/look_tv"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/little_black" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/addetail_item"
                android:text="@string/time"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="2015-8-20 18:00"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:padding="@dimen/addetail_item"
                android:text="@string/address"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/address_tv"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="@string/activity_address_test"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/addetail_item"
                android:text="@string/person_number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>



            <TextView
                android:id="@+id/person_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="20/100"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nickname_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <com.hdu.tx.aschool.ui.widget.image.CircleImageView
                android:id="@+id/host_head_pic"
                android:src="@drawable/ic_user"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/hostname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="杭州电子科技大学学生会"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include layout="@layout/addetail_userinfo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"></include>

        <include layout="@layout/addetail_userinfo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"></include>
        <include layout="@layout/addetail_userinfo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"></include>
        <include layout="@layout/addetail_userinfo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"></include>
        <include layout="@layout/addetail_userinfo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"></include>
        <include layout="@layout/addetail_userinfo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"></include>

    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">


            <TextView
                android:id="@+id/describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。这里是活动详情，好多字。"
                android:textSize="15sp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="更多详情"
                android:textSize="15sp"/>

            <ImageView
                style="@style/Right_arrow_image"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"></LinearLayout>


</LinearLayout>