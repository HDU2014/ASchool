<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_below="@id/appbar"
        android:id="@+id/rlusername"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_username"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_account"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_username"
            android:layout_height="wrap_content">
            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/et_phone"
                android:textCursorDrawable="@null"
                android:layout_centerVertical="true"
                android:hint="@string/phoneNumber"
                android:inputType="phone"

                android:background="@drawable/edit_no_stroke"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/bt_getYZM"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:text="@string/getYZM"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:background="@drawable/loginbuttonbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#88c8c8c8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@id/rlusername"
        android:id="@+id/rlyzm"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_yzm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pwd"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_yzm"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_yzm"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_YZM"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:layout_centerVertical="true"
                android:hint="@string/YZM"
                android:background="@drawable/edit_no_stroke"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:background="#88c8c8c8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@id/rlyzm"
        android:id="@+id/rlpassword1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_password1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pwd"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pass"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_password1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_pass"
                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:layout_centerVertical="true"
                android:hint="@string/setpassword"
                android:background="@drawable/edit_no_stroke"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:background="#88c8c8c8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@id/rlpassword1"
        android:id="@+id/rlpassword2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_password2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pwd"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pass1"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_password2"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_pass1"
                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:layout_centerVertical="true"
                android:hint="@string/comfirmpassword"
                android:background="@drawable/edit_no_stroke"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:background="#88c8c8c8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_regist"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/regist"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@id/rlpassword2"
        android:background="@drawable/loginbuttonbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</RelativeLayout>