<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:id="@+id/article_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/act_image_iv"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/footballad" />

        <TextView

            android:id="@+id/act_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/act_image_iv"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="@string/activity_title_test" />



        <ImageView
            android:tint="@color/red"
            android:id="@+id/time_iv"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/act_title_tv"
            android:layout_toRightOf="@id/act_image_iv"
            android:src="@drawable/time"
            android:layout_width="15dp"
            android:layout_height="15dp" />


        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/act_time_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/time_iv"
            android:layout_below="@id/act_title_tv"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#77000000"
            android:text="@string/activity_time_test" />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/location_iv"
            android:layout_toRightOf="@id/act_image_iv"
            android:layout_below="@id/time_iv"
            android:layout_width="15dp"
            android:src="@drawable/location"
            android:layout_height="15dp" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/host_iv"
            android:layout_toRightOf="@id/act_time_tv"
            android:layout_below="@id/act_title_tv"
            android:layout_width="15dp"
            android:src="@drawable/host_iv"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/act_hostname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/host_iv"
            android:layout_alignBaseline="@id/act_time_tv"

            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#77000000"
            android:text="小米科技"/>



        <ImageView
            android:layout_marginTop="8dp"
            android:layout_below="@id/location_iv"
            android:layout_toRightOf="@id/act_image_iv"
            android:id="@+id/act_collect_iv"
            android:src="@drawable/collected"
            android:layout_width="15dp"
            android:layout_height="15dp" />



        <TextView
            android:id="@+id/act_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/act_collect_iv"
            android:layout_below="@+id/act_time_tv"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textColor="#77000000"
            android:layout_alignBaseline="@id/location_iv"
            android:text="@string/activity_address_test" />

        <TextView
            android:id="@+id/act_collected_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_iv"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/act_collect_iv"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#77000000"
            android:text="6" />



        <ImageView
            android:tint="@color/red"
            android:layout_marginTop="8dp"
            android:layout_below="@id/location_iv"
            android:layout_toRightOf="@id/act_collected_tv"
            android:layout_marginLeft="20dp"
            android:id="@+id/act_look_iv"
            android:src="@drawable/look_iv"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/act_look_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_iv"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/act_look_iv"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#77000000"
            android:text="6" />

        <TextView
            android:id="@+id/act_join_tv"
            android:background="@drawable/join_bg"
            android:text="去报名9/30"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:layout_toRightOf="@id/act_time_tv"
            android:layout_below="@id/location_iv"
            android:layout_width="70dp"
            android:layout_height="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>